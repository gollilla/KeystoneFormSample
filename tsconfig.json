{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "Node",
    "module": "ES2020",
    "jsx": "preserve",
    "declaration": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitUseStrict": false,
    "noEmit": true,
    "listFiles": false,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ],
  "compileOnSave": false
}
